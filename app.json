{
  "expo": {
    "name": "Namaz Akışı",
    "slug": "namazakisi",
    "version": "0.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "namazakisi",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4CAF50"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.furkanisikay.namazakisi"
    },
    "android": {
      "package": "com.furkanisikay.namazakisi",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4CAF50"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_SPECIAL_USE",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.USE_EXACT_ALARM",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.WAKE_LOCK"
      ],
      "versionCode": 21
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-audio",
      [
        "expo-notifications",
        {
          "sounds": [
            "./assets/sounds/bildirim.mp3"
          ]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Namaz vakitlerinin dogru hesaplanmasi icin konum bilginize ihtiyac var.",
          "locationAlwaysPermission": "Hareket halindeyken namaz vakitlerini otomatik guncellemek icin arka plan konum iznine ihtiyac var.",
          "locationWhenInUsePermission": "Namaz vakitlerinin dogru hesaplanmasi icin konum bilginize ihtiyac var.",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      "expo-task-manager",
      "expo-background-fetch"
    ],
    "owner": "furkanisikay",
    "extra": {
      "eas": {
        "projectId": "53674e2a-7561-4e11-a548-3c36760daa4f"
      }
    }
  }
}
